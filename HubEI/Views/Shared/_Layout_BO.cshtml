<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>HubEI - BackOffice</title>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/sb-admin.css" rel="stylesheet">
    <link href="~/css/backoffice.css" rel="stylesheet">
</head>

<body class="fixed-nav bg-dark" id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" asp-area="" asp-controller="BackOffice" asp-action="Index">
        <img src="~/images/network.png" />
        HubEI - BackOffice</a>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="accordion" style="width:15%;">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Estatísticas">
                    <a class="nav-link" asp-controller="BackOffice" asp-action="Index">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">HOME</span>
                    </a>
                </li>

                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Projectos">
                    <a class="nav-link" asp-controller="BackOffice" asp-action="Projects">
                        <i class="fa fa-fw fa-slideshare"></i>
                        <span class="nav-link-text">PROJECTOS</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Colaboradores">
                    <a class="nav-link" data-parent="#accordion">
                        <i class="fa fa-fw fa-users"></i>
                        <span class="nav-link-text">COLABORADORES</span>
                    </a>
                    <ul class="sidenav-second-level" id="collapseComponents">
                        <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Estudantes">
                            <a class="nav-link" asp-area="" asp-controller="BackOffice" asp-action="Students">
                                <i class="fa fa-fw fa-graduation-cap"></i>
                                <span class="nav-link-text">ESTUDANTES</span>
                            </a>
                        </li>
                        <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Orientadores">
                            <a class="nav-link" asp-area="" asp-controller="BackOffice" asp-action="Mentors">
                                <i class="fa fa-fw fa-user"></i>
                                <span class="nav-link-text">ORIENTADORES</span>
                            </a>
                        </li>
                        <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Empresas">
                            <a class="nav-link" href="tables.html">
                                <i class="fa fa-fw fa-building"></i>
                                <span class="nav-link-text">EMPRESAS</span>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li id="backoffice-link" class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout"><i class="fa fa-fw fa-sign-out"></i> Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script> 
    <script src="~/js/sb-admin.min.js"></script>
    <script src="~/js/bo.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-validator-master/dist/validator.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
