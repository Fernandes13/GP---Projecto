@using HubEI.Helpers


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>HubEI</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript" src="https://cdn.rawgit.com/mikeflynn/egg.js/master/egg.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HubEI</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive"
                    aria-expanded="false" aria-label="Toggle navigation">

                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="col-md-4">
                <form class="navbar-form" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisa" name="srch-term" id="srch-term">
                        <div class="input-group-btn">
                            <button class="btn btn-secondary" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @Html.IsSelected(actions: "List", controllers: "Project")" asp-area="" asp-controller="Project" asp-action="List">Projectos</a>
                    </li>

                    <li class="nav-item" @Html.IsSelected(actions: "Index", controllers: "Empresas")>
                        <a class="nav-link" href="#">Empresas</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" href="#">Contactos</a>
                        </li>*@
                </ul>
            </div>
        </div>
        <div class="mr-4">
            <ul class="navbar-nav">
                <li class="dropdown">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Index" asp-controller="BackOffice" id="loginText"> <i class="glyphicon glyphicon-log-in"></i> BackOffice</a>
                    }
                    else
                    {
                        <a href="#" id="loginText" onclick="toggleLogin();"> <i class="glyphicon glyphicon-log-in"></i> BackOffice</a>

                    }

                </li>
            </ul>
        </div>
    </nav>

    @if (TempData["Got-Error"] == "true")
    {
        <div class="mt-6 col-md-9 offset-md-3 fixed-top show" id="loginForm">
            @Html.Partial("../BackOffice/Login.cshtml")
        </div>

    }
    else
    {
        <div class="mt-6 col-md-9 offset-md-3 fixed-top hide" id="loginForm">
            @Html.Partial("../BackOffice/Login.cshtml")
        </div>

    }



    @RenderBody()
    @*<hr />
        <footer>
            <p>&copy; 2018 - HubEI</p>
        </footer>
    *@

    <div id="funil" class="rows funil">
        <img src="~/images/funil/0.jpg" />
        <img src="~/images/funil/1.jpg" />
        <img src="~/images/funil/2.jpg" />
        <div style="margin-left:13%;">
            <img src="~/images/funil/4.jpg" />
            <img src="~/images/funil/3.jpg" />
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
