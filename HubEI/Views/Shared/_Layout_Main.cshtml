@using HubEI.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>HubEI</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HubEI</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive"
                    aria-expanded="false" aria-label="Toggle navigation">

                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="col-sm-4 col-md-4">
                <form class="navbar-form" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisa" name="srch-term" id="srch-term">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @Html.IsSelected(actions: "Index", controllers: "BackOffice")" href="#">Projectos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Html.IsSelected(actions: "Index", controllers: "BackOffice")" href="#">Empresas</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" href="#">Contactos</a>
                    </li>*@
                    <li id="backoffice-link" class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="BackOffice" asp-action="Index">BackOffice</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()
    @*<hr />
      <footer>
          <p>&copy; 2018 - HubEI</p>
      </footer>
    *@

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
