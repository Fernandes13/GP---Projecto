@model HubEI.Models.ViewModels.ProjectViewModel

@{
    Layout = "~/Views/Shared/_Layout_BO.cshtml";
}

<script src="@Url.Content("~/js/site.js")"></script>

<link href="~/css/general-table.css" rel="stylesheet" type="text/css">

<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EditProject" asp-controller="BackOffice" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title">Adicionar Projecto</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" type="text" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" style="resize:none;" cols="40" rows="5" maxlength="499" font-family="Arial,Helvetica,sans-serif;" required></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Report"></label>
                        <input asp-for="Report" type="file" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectDate"></label>
                        <input asp-for="ProjectDate" type="date" value="ProjectDate" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="IsVisible"></label>
                        <input asp-for="IsVisible" type="checkbox" />
                    </div>
                    <div class="form-group">
                        <label asp-for="IdProjectType"></label>
                        @Html.DropDownListFor(model => model.IdProjectType, Model.ProjectTypes, "-- Tipo de Projecto --")
                    </div>
                    <div class="form-group">
                        <label asp-for="IdStudent"></label>
                        @Html.DropDownListFor(model => model.IdStudent, Model.Students, "-- Seleccione o estudante --")
                    </div>
                    <div class="form-group">
                        <label asp-for="IdCompany"></label>
                        @Html.DropDownListFor(model => model.IdCompany, Model.Companies, "-- Seleccione a empresa associada --")
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>