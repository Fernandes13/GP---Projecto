@model HubEI.Models.ViewModels.BOMentorViewModel
@{
    Layout = "~/Views/Shared/_Layout_BO.cshtml";
}
<link href="~/css/general-table.css" rel="stylesheet" type="text/css">

<div class="container">

    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2><b>Orientadores</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="#addMentorModal" onclick="clearStudentForm();" class="btn btn-success" data-toggle="modal"><i class="fa fa-fw fa-plus-circle"></i> <span>Adicionar Orientador</span></a>
                    <a href="#deleteMentorModal" onclick="deleteMentors();" id="btn-remove-selected" class="btn btn-danger" data-toggle="modal"><i class="fa fa-fw fa-minus-circle"></i> <span>Eliminar Seleccionados</span></a>
                </div>
            </div>
        </div>


        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="selectAll">
                            <label for="selectAll"></label>
                        </span>
                    </th>
                    <th>@Html.DisplayNameFor(modelItem => Model.Mentors.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(modelItem => Model.Mentors.FirstOrDefault().Email)</th>
                    <th>Acções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mentor in Model.Mentors)
                {
                    <tr>
                        <td>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="cb_@mentor.IdSchoolMentor" name="mentors" value="1">
                                <label for="checkbox1"></label>
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => mentor.Name)</td>
                        <td>@Html.DisplayFor(modelItem => mentor.Email)</td>
                        <td>
                            <a href="#editMentorModal" id="edit_@mentor.IdSchoolMentor" onclick="editMentor(this.id);" class="edit" data-toggle="modal"><i class="fa fa-edit custom-tooltip" data-toggle="tooltip" title="Editar"></i></a>
                            <a href="#deleteMentorModal" id="@mentor.IdSchoolMentor" onclick="deleteMentor(this.id);" class="delete" data-toggle="modal"><i class="fa fa-trash " data-toggle="tooltip" title="Eliminar"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- PAGINATION
        <div class="clearfix">
            <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
            <ul class="pagination">
                <li class="page-item disabled"><a href="#">Previous</a></li>
                <li class="page-item"><a href="#" class="page-link">1</a></li>
                <li class="page-item"><a href="#" class="page-link">2</a></li>
                <li class="page-item active"><a href="#" class="page-link">3</a></li>
                <li class="page-item"><a href="#" class="page-link">4</a></li>
                <li class="page-item"><a href="#" class="page-link">5</a></li>
                <li class="page-item"><a href="#" class="page-link">Next</a></li>
            </ul>
        </div>
            -->
    </div>
</div>
<div id="addMentorModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" style="width:125%;">
            <form asp-action="Mentor" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Adicionar Orientador</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Mentor.Name"></label>
                        <input class="form-control" asp-for="Mentor.Name" />
                        <span asp-validation-for="Mentor.Name" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mentor.Email"></label>
                        <input class="form-control" asp-for="Mentor.Email" />
                        <span asp-validation-for="Mentor.Email" class="error-message"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-success" value="Adicionar">
                </div>
            </form>
        </div>
    </div>
</div>


<div id="editMentorModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" style="width:125%;">
            <form asp-action="EditMentor" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Editar Orientador</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="edit-mentor-id" asp-for="Mentor.IdSchoolMentor" />
                    <div class="form-group">
                        <label asp-for="Mentor.Name"></label>
                        <input class="form-control" id="edit-mentor-name" asp-for="Mentor.Name" />
                        <span asp-validation-for="Mentor.Name" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mentor.Email"></label>
                        <input class="form-control" id="edit-mentor-email" asp-for="Mentor.Email" />
                        <span asp-validation-for="Mentor.Email" class="error-message"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-success" value="Editar">
                </div>
            </form>
        </div>
    </div>
</div>


<div id="deleteMentorModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Eliminar Orientadores(s)</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
                </div>
                <div class="modal-body">
                    <p>Tem a certeza que pretende eliminar o(s) registo(s)?</p>
                    <p class="text-warning"><small>Atenção! Esta ação é irreversível. </small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input type="submit" onclick="eliminatePendingMentors()" class="btn btn-danger" value="Eliminar">
                </div>
            </form>
        </div>
    </div>
</div>




@if (TempData["HasAlert"] != null)
{
    @if ((string)TempData["HasAlert"] == "true")
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span id="alert-message">@TempData["AlertMessage"]</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span class="close-alert" aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}