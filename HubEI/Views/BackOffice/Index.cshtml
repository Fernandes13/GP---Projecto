        <!-- Icon Cards -->
<div class="row">
    <!--Projectos-->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-book"></i>
                </div>
                <div class="mr-5">@ViewData["projects"] Projecto(s)</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-action="Projects">
                <span class="float-left">Detalhes</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <!--Estudantes-->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-graduation-cap"></i>
                </div>
                <div class="mr-5">@ViewData["students"] Estudante(s)</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-action="Students">
                <span class="float-left">Detalhes</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <!--Orientadores-->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-users"></i>
                </div>
                <div class="mr-5">@ViewData["mentors"] Orientadore(s)</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-action="Mentors">
                <span class="float-left">Detalhes</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <!--Empresas-->
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-briefcase"></i>
                </div>
                <div class="mr-5">@ViewData["companies"] Empresa(s)</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-action="Companies">
                <span class="float-left">Detalhes</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>

