@model HubEI.Models.ViewModels.BOStudentViewModel
@{
    Layout = "~/Views/Shared/_Layout_BO.cshtml";
}
<link href="~/css/general-table.css" rel="stylesheet" type="text/css">

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2><b>Estudantes</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="fa fa-fw fa-plus-circle"></i> <span>Adicionar Estudante</span></a>
                    <a href="#deleteEmployeeModal" id="btn-remove-selected" class="btn btn-danger" data-toggle="modal"><i class="fa fa-fw fa-minus-circle"></i> <span>Eliminar Seleccionados</span></a>
                </div>
            </div>
        </div>


        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="selectAll">
                            <label for="selectAll"></label>
                        </span>
                    </th>
                    <th>@Html.DisplayNameFor(modelItem => Model.Students.FirstOrDefault().StudentNumber)</th>
                    <th>@Html.DisplayNameFor(modelItem => Model.Students.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(modelItem => Model.Students.FirstOrDefault().Email)</th>
                    <th>@Html.DisplayNameFor(modelItem => Model.Students.FirstOrDefault().BirthDate)</th>
                    <th>@Html.DisplayNameFor(modelItem => Model.Students.FirstOrDefault().IdStudentBranchNavigation.Description)</th>
                    <th>Acções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                <label for="checkbox1"></label>
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => student.StudentNumber)</td>
                        <td>@Html.DisplayFor(modelItem => student.Name)</td>
                        <td>@Html.DisplayFor(modelItem => student.Email)</td>
                        <td>@Html.DisplayFor(modelItem => student.BirthDate)</td>
                        <td>@Html.DisplayFor(modelItem => student.IdStudentBranchNavigation.Description)</td>
                        <td>
                            <a href="#editEmployeeModal" class="edit" data-toggle="modal"><i class="fa fa-edit" data-toggle="tooltip" title="Editar"></i></a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i class="fa fa-trash" data-toggle="tooltip" title="Eliminar"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- PAGINATION
        <div class="clearfix">
            <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
            <ul class="pagination">
                <li class="page-item disabled"><a href="#">Previous</a></li>
                <li class="page-item"><a href="#" class="page-link">1</a></li>
                <li class="page-item"><a href="#" class="page-link">2</a></li>
                <li class="page-item active"><a href="#" class="page-link">3</a></li>
                <li class="page-item"><a href="#" class="page-link">4</a></li>
                <li class="page-item"><a href="#" class="page-link">5</a></li>
                <li class="page-item"><a href="#" class="page-link">Next</a></li>
            </ul>
        </div>
            -->
    </div>
</div>

<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Adicionar Estudante</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Students.FirstOrDefault().StudentNumber"></label>
                        <input asp-for="Students.FirstOrDefault().StudentNumber" type="text" />
                        <span asp-validation-for="Students.FirstOrDefault().StudentNumber" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Students.FirstOrDefault().Name"></label>
                        <input asp-for="Students.FirstOrDefault().Name" />
                        <span asp-validation-for="Students.FirstOrDefault().Name" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Students.FirstOrDefault().Telephone"></label>
                        <input asp-for="Students.FirstOrDefault().Telephone" />
                        <span asp-validation-for="Students.FirstOrDefault().Telephone" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Students.FirstOrDefault().BirthDate"></label>
                        <input asp-for="Students.FirstOrDefault().BirthDate" />
                        <span asp-validation-for="Students.FirstOrDefault().BirthDate" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Students.FirstOrDefault().IdStudentBranchNavigation"></label>

                        @Html.DropDownListFor(model => model.Students.FirstOrDefault().IdStudentBranchNavigation.IdStudentBranch, Model.Branches, "-- Seleccione o Ramo --", new { })
                        <span asp-validation-for="Students.FirstOrDefault().IdStudentBranchNavigation.IdStudentBranch" class="error-message"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-success" value="Adicionar">
                </div>
            </form>
        </div>
    </div>
</div>

<div id="editEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Editar Estudante</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Students.FirstOrDefault().StudentNumber"></label>
                        <input asp-for="Students.FirstOrDefault().StudentNumber" type="text" readonly class="disabled-input" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Students.FirstOrDefault().Name"></label>
                        <input asp-for="Students.FirstOrDefault().Name" type="text" />
                        <span asp-validation-for="Students.FirstOrDefault().Name" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-success" value="Guardar">
                </div>
            </form>
        </div>
    </div>
</div>


<div id="deleteEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Eliminar Estudante(s)</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
                </div>
                <div class="modal-body">
                    <p>Tem a certeza que pretende eliminar o(s) registo(s)?</p>
                    <p class="text-warning"><small>Atenção! Esta ação é irreversível. </small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-danger" value="Eliminar">
                </div>
            </form>
        </div>
    </div>
</div>
