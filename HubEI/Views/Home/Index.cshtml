

<link rel="stylesheet" href="css/footer-distributed.css">
<script src="~/js/index.js"></script>
<div class="container" style="width:100%;min-height:100%;margin-bottom:90px;">
    <div id="projectSlider" style="width:100%" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @{
                var count = 0;
            }

            @foreach (var project in Model.Projects)
            {
                if (count == 0)
                {

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/InstitutoPolitecnicoSetubal.jpg">
                        <a href="/Project?project_id=@project.IdProject">
                            <div class="carousel-caption d-none d-md-block">
                                <h1 style="font-weight:bold">@project.Title</h1>
                                <p> @project.Description </p>
                            </div>
                        </a>
                    </div>

                }
                else
                {

                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/InstitutoPolitecnicoSetubal.jpg">
                        <a href="/Project?project_id=@project.IdProject">
                            <div class="carousel-caption d-none d-md-block">
                                <h1 style="font-weight:bold">@project.Title</h1>
                                <p> @project.Description </p>
                            </div>
                        </a>
                    </div>


                }
                count++;
            }
        </div>


        <a class="carousel-control-prev" href="#projectSlider" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#projectSlider" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<footer class="footer-distributed">
    <div class="footer-right">

        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-linkedin"></i></a>
        <a href="#"><i class="fa fa-github"></i></a>

    </div>

    <div class="footer-left">
        <div class="row">
            <img src="~/images/network.png">  <p style="margin-left:1.5%;margin-top:0.3%;font-size:15px;">HubEI © @DateTime.Now.Year</p>
        </div>
    </div>
</footer>



@if (ViewBag.rgpdCookie == null)
{
    <div id="rpgdModal" class="modal fade" role="dialog">
        <div class="modal-dialog" style="overflow-y: initial !important">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">We value your privacy</h3>
                </div>
                <div class="modal-body" style="height: 80vh; overflow-y: auto;padding:3%;">
                    @Html.Raw(ViewData["RgpdInfo"])
                </div>
                <div class="modal-footer">
                    <button type="button" style="font-size:14px" class="btn btn-info" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

